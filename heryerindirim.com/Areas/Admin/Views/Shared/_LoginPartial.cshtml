@using Microsoft.AspNetCore.Identity
@using heryerindirim.com.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Merhaba @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Çıkış</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="padding-right:30px">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
    </ul>
}
