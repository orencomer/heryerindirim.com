@model IEnumerable<heryerindirim.com.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiscountedPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductStockCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryEnum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiscountDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductImage)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountedPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductStockCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryEnum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
