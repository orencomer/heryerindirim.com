@using Microsoft.AspNetCore.Identity
@using heryerindirim.com.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@UserManager.GetUserName(User)<img src="~/assets/img/icon-acount.png" alt="avatar" style="width:30px;height:30px;" class="profile-image img-circle"></a>
        <ul class="dropdown-menu dropdown-menu-right">
            <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Profilim</a></li>
            <li>
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">Çıkış Yap</a>
            </li>
        </ul>
    </form>
}
else
{
        <div style="padding-top:10px">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                <img src="~/assets/img/icon-acount.png" alt="avatar" style="width:30px;height:30px;">
            </a>
            <ul class="dropdown-menu dropdown-menu-left">
                <li><a href="/account/login">Giriş</a></li>
                <li><a href="/account/register">Kaydol</a></li>
                <li><a href="/account/forgotpassword">Şifremi Unuttum</a></li>
            </ul>
        </div>
}

